<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="RswareDesign.Controls.GlassRibbonButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RswareDesign.Controls">

    <Button x:Name="RootButton" Background="Transparent" BorderThickness="0"
            Padding="8,6" CornerRadius="6"
            PointerEntered="OnPointerEntered" PointerExited="OnPointerExited">
        <StackPanel HorizontalAlignment="Center" Spacing="4">
            <FontIcon x:Name="IconElement" FontSize="22"
                      Foreground="{StaticResource AccentBrush}"
                      HorizontalAlignment="Center" />
            <TextBlock x:Name="LabelElement" FontSize="10"
                       FontFamily="{StaticResource FontUI}"
                       Foreground="{StaticResource TextSecondary}"
                       HorizontalAlignment="Center"
                       TextAlignment="Center" />
        </StackPanel>
    </Button>

</UserControl>
