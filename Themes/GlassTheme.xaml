<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ══════════════════════════════════════════════════ -->
    <!--  GLASSMORPHISM COLOR SYSTEM                        -->
    <!-- ══════════════════════════════════════════════════ -->

    <!-- Background Gradient Colors -->
    <Color x:Key="BgDark">#FF0D1117</Color>
    <Color x:Key="BgMid">#FF161B22</Color>
    <Color x:Key="BgLight">#FF1C2333</Color>

    <!-- Glass Surface Colors (semi-transparent) -->
    <SolidColorBrush x:Key="GlassBrush" Color="#1AFFFFFF" />
    <SolidColorBrush x:Key="GlassHighBrush" Color="#26FFFFFF" />
    <SolidColorBrush x:Key="GlassLowBrush" Color="#0DFFFFFF" />
    <SolidColorBrush x:Key="GlassHoverBrush" Color="#33FFFFFF" />
    <SolidColorBrush x:Key="GlassSelectedBrush" Color="#1A60A5FA" />

    <!-- Glass Border -->
    <SolidColorBrush x:Key="GlassBorderBrush" Color="#26FFFFFF" />
    <SolidColorBrush x:Key="GlassBorderHighBrush" Color="#40FFFFFF" />
    <Thickness x:Key="GlassBorderThickness">1</Thickness>
    <CornerRadius x:Key="GlassRadius">8</CornerRadius>
    <CornerRadius x:Key="GlassRadiusLarge">12</CornerRadius>
    <CornerRadius x:Key="GlassRadiusSmall">6</CornerRadius>

    <!-- Accent (Primary) — Cyan/Blue -->
    <Color x:Key="AccentColor">#FF60A5FA</Color>
    <SolidColorBrush x:Key="AccentBrush" Color="#FF60A5FA" />
    <SolidColorBrush x:Key="AccentLowBrush" Color="#3360A5FA" />
    <SolidColorBrush x:Key="AccentHighBrush" Color="#FF93C5FD" />

    <!-- Secondary — Teal/Cyan -->
    <SolidColorBrush x:Key="SecondaryBrush" Color="#FF34D399" />
    <SolidColorBrush x:Key="SecondaryLowBrush" Color="#3334D399" />

    <!-- Semantic -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#FF4ADE80" />
    <SolidColorBrush x:Key="WarningBrush" Color="#FFFBBF24" />
    <SolidColorBrush x:Key="ErrorBrush" Color="#FFF87171" />
    <SolidColorBrush x:Key="InfoBrush" Color="#FF60A5FA" />

    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimary" Color="#F0FFFFFF" />
    <SolidColorBrush x:Key="TextSecondary" Color="#99FFFFFF" />
    <SolidColorBrush x:Key="TextTertiary" Color="#66FFFFFF" />
    <SolidColorBrush x:Key="TextOnAccent" Color="#FF0D1117" />
    <SolidColorBrush x:Key="ValueHighlightBrush" Color="#FF60A5FA" />

    <!-- Surface / Background -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#FF0D1117" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FF161B22" />
    <SolidColorBrush x:Key="SurfaceVariantBrush" Color="#FF1C2333" />
    <SolidColorBrush x:Key="DividerBrush" Color="#1AFFFFFF" />

    <!-- Grid -->
    <SolidColorBrush x:Key="GridHeaderBrush" Color="#26FFFFFF" />
    <SolidColorBrush x:Key="GridAlternatingBrush" Color="#0DFFFFFF" />
    <SolidColorBrush x:Key="GridSelectedBrush" Color="#2660A5FA" />
    <SolidColorBrush x:Key="GridHoverBrush" Color="#1AFFFFFF" />

    <!-- StatusBar -->
    <SolidColorBrush x:Key="StatusBarBrush" Color="#FF0D1117" />

    <!-- ══════════════════════════════════════════════════ -->
    <!--  TYPOGRAPHY                                        -->
    <!-- ══════════════════════════════════════════════════ -->
    <FontFamily x:Key="FontUI">Segoe UI Variable, Segoe UI, sans-serif</FontFamily>
    <FontFamily x:Key="FontCode">Cascadia Code, Consolas, monospace</FontFamily>
    <x:Double x:Key="FontXS">10</x:Double>
    <x:Double x:Key="FontSM">12</x:Double>
    <x:Double x:Key="FontMD">13</x:Double>
    <x:Double x:Key="FontLG">16</x:Double>
    <x:Double x:Key="FontXL">20</x:Double>
    <x:Double x:Key="FontXXL">28</x:Double>

    <!-- ══════════════════════════════════════════════════ -->
    <!--  SPACING                                           -->
    <!-- ══════════════════════════════════════════════════ -->
    <Thickness x:Key="PanelPadding">12</Thickness>
    <Thickness x:Key="CardPadding">16</Thickness>
    <Thickness x:Key="ItemSpacing">0,0,0,6</Thickness>
    <Thickness x:Key="SectionSpacing">0,0,0,16</Thickness>
    <x:Double x:Key="PanelGap">8</x:Double>

    <!-- ══════════════════════════════════════════════════ -->
    <!--  ICON SIZES                                        -->
    <!-- ══════════════════════════════════════════════════ -->
    <x:Double x:Key="IconSM">14</x:Double>
    <x:Double x:Key="IconMD">18</x:Double>
    <x:Double x:Key="IconLG">24</x:Double>
    <x:Double x:Key="IconXL">32</x:Double>

    <!-- Panel Toggle Button Accents (A/B/C/D) -->
    <SolidColorBrush x:Key="PanelAAccent" Color="#FF60A5FA" />
    <SolidColorBrush x:Key="PanelBAccent" Color="#FF34D399" />
    <SolidColorBrush x:Key="PanelCAccent" Color="#FFFBBF24" />
    <SolidColorBrush x:Key="PanelDAccent" Color="#FFF87171" />

</ResourceDictionary>
